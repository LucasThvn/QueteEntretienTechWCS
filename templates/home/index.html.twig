{% extends 'base.html.twig' %}

{% block title %}Dev Tech Challenge{% endblock %}

{% block body %}


    <!-- Header section -->
    <header>
        <div class="logo-wcs">
            <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png"
                 alt="Wild Code School logo"/>
        </div>
        <h1>
            Les Argonautes
        </h1>
    </header>

    <!-- Main section -->
    <main>

        <!-- New member form -->
        <h2 class="underline">Ajouter un(e) Argonaute</h2>

        <form class="new-member-form">
            {{ form_start(form) }}
            {{ form_label(form.name) }}
            <div class="form-content">
                {{ form_widget(form.name) }}
                <button type="submit">{{ button_label|default('Recruter') }}</button>
            </div>
            {{ form_end(form) }}
        </form>

        <!-- Member list -->
        <h2 class="underline">Membres de l'équipage</h2>
        <section class="member-list">
            {% for member in argonauts %}
                <div class="member-item">{{ member.name }}</div>
            {% endfor %}
        </section>
    </main>

    <footer>
        <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
    </footer>
{% endblock %}
